{
	"name": "mobile-challenge",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"start": "node node_modules/react-native/local-cli/cli.js start",
		"test": "jest",
		"postinstall": "remotedev-debugger --hostname localhost --port 5678 --injectserver --wsEngine ws",
		"ios": "react-native run-ios",
		"android": "react-native run-android",
		"lint:staged": "lint-staged",
		"lint": "eslint app --max-warnings=0",
		"prettier": "prettier --write --single-quote true --trailing-comma all --print-width 100"
	},
	"lint-staged": {
		"*.js": [
			"yarn prettier",
			"eslint --fix",
			"git add"
		]
	},
	"pre-commit": "lint:staged",
	"dependencies": {
		"axios": "^0.18.0",
		"http-status-codes": "^1.3.0",
		"normalizr": "^3.3.0",
		"prop-types": "15.6.0",
		"react": "16.8.4",
		"react-native": "0.58.6",
		"react-native-config": "^0.11.7",
		"react-native-gesture-handler": "^1.1.0",
		"react-native-progress": "^3.5.0",
		"react-native-vector-icons": "6.1.0",
		"react-navigation": "3.0.0",
		"react-redux": "^5.0.6",
		"redux": "^4.0.0",
		"redux-thunk": "^2.3.0"
	},
	"devDependencies": {
		"@babel/core": "^7.4.0",
		"@babel/runtime": "^7.4.2",
		"babel-jest": "^24.5.0",
		"babel-plugin-ignite-ignore-reactotron": "^0.3.0",
		"husky": "^0.14.3",
		"jest": "^24.5.0",
		"lint-staged": "^7.0.0",
		"metro-react-native-babel-preset": "^0.53.1",
		"pre-commit": "^1.2.2",
		"prettier": "^1.12.0",
		"react-devtools-core": "3.4.3",
		"react-test-renderer": "16.8.3",
		"reactotron-react-native": "^2.1.0",
		"reactotron-redux": "^2.1.0",
		"remote-redux-devtools": "^0.5.16",
		"remotedev-rn-debugger": "^0.8.4",
		"remotedev-server": "^0.3.1"
	},
	"rnpm": {
		"assets": [
			"./app/assets/fonts"
		]
	},
	"jest": {
		"testMatch": [
			"<rootDir>/Tests/**/*.js",
			"**/?(*.)(spec|test).js?(x)"
		],
		"testPathIgnorePatterns": [
			"/node_modules/",
			"<rootDir>/Tests/Setup.js"
		],
		"moduleNameMapper": {
			"^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "identity-obj-proxy"
		},
		"transform": {
			"^.+\\.(js)$": "<rootDir>/node_modules/react-native/jest/preprocessor.js"
		},
		"setupFiles": [
			"<rootDir>/Tests/Setup"
		],
		"preset": "react-native"
	},
	"config": {},
	"standard": {
		"parser": "babel-eslint",
		"globals": [
			"describe",
			"test",
			"jest",
			"expect",
			"fetch",
			"navigator",
			"__DEV__",
			"XMLHttpRequest",
			"FormData",
			"React$Element"
		]
	}
}
